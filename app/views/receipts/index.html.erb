<p id="notice"><%= notice %></p>

<div class="card">
    <div class="card-header">       
        <h3> RECEIPTS</h3>
    </div>
        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Date</th>
                <th scope="col">Place</th>
                <th scope="col">Price</th>
                </tr>
            </thead>

            <tbody>
              <% @receipts.each do |receipt| %>
                <tr>
                  <td><%= receipt.name %></td>
                  <td>
                    <%= link_to edit_receipt_path(receipt) do %>
                      <img src="<%= receipt.image %>" width="100">
                    <% end %>
                  </td>
                  <td><%#= receipt.details.first.date %></td>
                  <td><%#= receipt.details.first.place %></td>
                  <td><%#= receipt.details.first.price %></td>
                  <td><%= link_to receipt_path(receipt), class: 'text-muted' do %>
                  <i class="fas fa-eye"></i>
                  <% end %>
                  </td>
                  <td><%= link_to edit_receipt_path(receipt) ,class: 'text-muted' do %>
                   <i class="fas fa-edit"></i>
                    <% end %>
                  </td>
                  <td><%= link_to receipt_path(receipt), method: :delete, data: { confirm: 'Are you sure?' } , class: "text-muted" do %>
                  <i class="fas fa-trash-alt"></i>
                  <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
</div>

